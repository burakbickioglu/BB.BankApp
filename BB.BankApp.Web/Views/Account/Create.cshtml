@model UserListModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-3">
    <div class="col-6">
        <h3>Hesap Eklenecek Kişinin Bilgileri</h3>
        <p>Kullanıcı Adı : @Model.Name</p>
        <p>Kullanıcı Soyadı : @Model.Surname</p>
        <p>Kullanıcının Aktif Hesap Sayısı : <getAccountCount application-user-id="@Model.Id"></getAccountCount></p>
    </div>
    <div class="col-6">
        <form asp-action="Create" asp-controller="Account" method="post">
            <input type="hidden" name="ApplicationUserId" value="@Model.Id"/>
            <div class="mb-3">
                <label class="form-label">Hesap Numarası</label>
                <input type="number" class="form-control" name="AccountNumber" />
            </div>
            <div class="mb-3">
                <label class="form-label">Bakiye</label>
                <input type="number" class="form-control" name="Balance" />
            </div>
            <div class="mb-3"><button class="btn btn-primary">Kaydet</button></div>
        </form>
    </div>

</div>